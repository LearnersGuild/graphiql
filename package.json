{
  "name": "lg-graphiql",
  "version": "0.1.0",
  "description": "GraphQL API Explorer",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LearnersGuild/graphiql.git"
  },
  "author": {
    "name": "Jeffrey Wescott",
    "email": "jeffrey@learnersguild.org"
  },
  "scripts": {
    "build": "npm run symlinks && mkdir -p dist && webpack --config config/webpack.js",
    "build:profile": "npm run symlinks && mkdir -p dist && webpack --profile --json --config config/webpack.js > tmp/webpack-stats.json",
    "icons:fetch": "mkdir -p dist && curl -s https://brand.learnersguild.org/icontags > dist/icons-metadata.json",
    "lint": "./node_modules/.bin/xo",
    "postinstall": "npm run build",
    "start": "npm run icons:fetch && npm run symlinks && node server",
    "symlinks": "./node_modules/.bin/babel-node ./scripts/createSymlinks",
    "test": "npm run symlinks && npm run lint && npm run test:run --",
    "test:cov": "npm run test:cov:run && npm run test:cov:send",
    "test:cov:run": "./node_modules/.bin/nyc --reporter=lcov npm run test:run",
    "test:cov:send": "./node_modules/.bin/codeclimate-test-reporter < ./coverage/lcov.info",
    "test:run": "NODE_ENV=test ./node_modules/.bin/babel-tape-runner './**/__tests__/*.test.js'"
  },
  "keywords": [
    "graphql",
    "graphiql",
    "api"
  ],
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/LearnersGuild/graphiql/issues"
  },
  "homepage": "https://github.com/LearnersGuild/graphiql#readme",
  "dependencies": {
    "@learnersguild/idm-jwt-auth": "^1.0.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-polyfill": "^6.6.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "config": "^1.21.0",
    "cookie-parser": "^1.4.1",
    "css-loader": "^0.23.0",
    "css-modules-require-hook": "^3.0.0",
    "dotenv": "^2.0.0",
    "eslint-config-xo-react": "^0.5.0",
    "eslint-plugin-react": "^4.1.0",
    "express": "^4.13.3",
    "express-graphql": "^0.4.9",
    "express-sslify": "^1.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "generic-names": "^1.0.1",
    "graphiql": "^0.6.6",
    "graphql": "^0.4.18",
    "history": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^8.0.4",
    "json-loader": "^0.5.4",
    "node-sass": "^3.4.2",
    "normalize.css": "^3.0.3",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "raven": "^0.10.0",
    "raven-js": "^2.1.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.5",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.0.5",
    "redux-auth-wrapper": "^0.3.0",
    "redux-thunk": "^1.0.3",
    "rimraf": "^2.5.4",
    "sass-loader": "^3.1.2",
    "serve-static": "^1.10.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.7.1"
  },
  "devDependencies": {
    "babel-plugin-react-transform": "^2.0.0-beta1",
    "babel-tape-runner": "^2.0.1",
    "codeclimate-test-reporter": "^0.3.3",
    "eslint": "^2.2.0",
    "eslint-config-xo-react": "^0.5.0",
    "eslint-plugin-react": "^4.2.3",
    "jsdom": "^8.0.2",
    "nyc": "^7.1.0",
    "piping": "^0.3.0",
    "pre-commit": "^1.1.3",
    "react-addons-test-utils": "^0.14.3",
    "react-transform-hmr": "^1.0.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "xo": "^0.12.1"
  },
  "engines": {
    "node": "5.6.x",
    "npm": "3.7.x"
  },
  "precommit": [
    "lint"
  ],
  "xo": {
    "extends": "xo-react",
    "rules": {
      "comma-dangle": [
        0
      ],
      "import/no-extraneous-dependencies": 0,
      "no-negated-condition": [
        0
      ],
      "react/jsx-indent": [
        2,
        2
      ],
      "react/jsx-indent-props": [
        2,
        2
      ],
      "xo/filename-case": [
        0
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ]
    },
    "esnext": true,
    "space": true,
    "semicolon": false
  },
  "nyc": {
    "all": true,
    "exclude": [
      "dist/"
    ],
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ]
  }
}
